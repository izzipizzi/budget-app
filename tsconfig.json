{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@interfaces/*": [
        "src/interfaces/*"
      ],
      "@reducers/*": [
        "src/reducers/*"
      ],
      "@pages/*": [
        "src/pages/*"
      ],
      "@helpers/*": [
        "src/helpers/*"
      ],
      "@images/*": [
        "src/static/images/*"
      ]
    }
  },
  "include": [
    "src"
  ],
  "types" : [
    "./src/theme/theme.d.ts"
  ]
}
